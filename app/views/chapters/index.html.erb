<p id="notice"><%= notice %></p>

<h1>Chapters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration</th>
      <th>Series</th>
      <th>User</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.name %></td>
        <td><%= chapter.duration %></td>
        <td><%= chapter.series %></td>
        <td><%= chapter.user %></td>
        <td><%= chapter.rating %></td>
        <td><%= link_to 'Show', series_chapter_path(@series, chapter) %></td>
        <td><%= link_to 'Edit', edit_series_chapter_path(@series, chapter) %></td>
        <td><%= link_to 'Destroy', series_chapter_path(@series, chapter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chapter', new_series_chapter_path(@series) %>
