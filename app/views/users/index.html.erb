
<h1>Usuarios: </h1>

<%= form_tag users_search_path, class: "form-inline" do %>
  <div class="form-group">
    <%= select_tag "search for", options_for_select(%i[username name email],
                                                    :username),
                                                    class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= text_field_tag :search_text, nil, class: 'form-control' %>
  </div>
  <%= submit_tag 'Search', class: "btn btn-default" %>
<% end %>

<table class="table">
  <tr>
    <th>Nombre</th>
    <th>Usuario</th>
    <th>Email</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td>
      <%= button_to "Destroy", users_destroy_path, method: :delete,
                                                   params: { user_id: user },
                                                   data: { confirm:
                                                   'Estas seguro?'} %> 
    </td>
  </tr>
<% end %>
</table>
