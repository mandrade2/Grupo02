<%= form_for(news) do |f| %>
  <% if news.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger"><h4><%= pluralize(news.errors.count, "error") %> no dejaron que la noticia se guarde </h4></div>

        <ol>
          <% news.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ol>
      </div>
  <% end %>

  <div class="form-group">
    <%= f.label :titulo %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :contenido %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Crear noticia', class: 'btn btn-primary' %>
  </div>
<% end %>
