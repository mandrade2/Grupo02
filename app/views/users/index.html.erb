<% provide(:title, "Usuarios") %>
<% provide(:header, "Usuarios") %>

<div id="users_search">
  <%= form_tag users_search_path, class: "form-inline", method: :get do %>
    <div class="form-group">
      <%= select_tag "search_for", options_for_select(%i[username name email],
                                                      :username),
                                                      class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= text_field_tag :search_text, nil, class: 'form-control', name: 'search_text' %>
    </div>
    <%= submit_tag 'Search', class: "btn btn-default" %>
  <% end %>
  <%= link_to 'List all users', users_path, class: 'pull-right btn btn-primary' %>
</div>

<table class="table">
  <tr>
    <th>Nombre</th>
    <th>Usuario</th>
    <th>Email</th>
    <th colspan="2"></th>
  </tr>

<% @users.each do |user| %>
  <% if user.username != current_user.username && user.user? %>
    <tr>
      <td><%= user.name %></td>
      <td><%= link_to user.username, profile_path(user.username) %></td>
      <td><%= user.email %></td>
      <td>
        <%= button_to "Upgrade", users_upgrade_path, method: :patch,
                                                     params: { user_id: user },
                                                     data: { confirm:
                                                     'Estas seguro?'} %>
      </td>
      <td>
        <%= button_to "Destroy", users_destroy_path, method: :delete,
                                                     params: { user_id: user },
                                                     data: { confirm:
                                                     'Estas seguro?'} %>
      </td>
    </tr>
  <% end %>
<% end %>
</table>
