<% provide(:title, 'Registrarse') %>
<% provide(:header, "Registrarse") %>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" />

<a class="btn btn-block btn-social btn-facebook" href= <%= user_facebook_omniauth_authorize_path %> >
  <span class="fa fa-facebook"></span> Sign up with Twitter
</a>
<a class="btn btn-block btn-social btn-twitter"  >
  <span class="fa fa-twitter"></span> Sign up with Twitter
</a>

<a class="btn btn-block btn-social btn-google"  >
  <span class="fa fa-google"></span> Sign up with Twitter
</a>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.label :nombre %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :usuario %>
      <%= f.text_field :username, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :contraseña %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <% if @validatable %>
          <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :confirmacion_de_contraseña %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>

    <%= f.submit "Sign up", class: 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
