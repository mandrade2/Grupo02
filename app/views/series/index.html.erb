<% provide(:title, 'Series') %>
<% provide(:header,'Series') %>
<div class="btn-group pull-right" >
<%= link_to 'Crear Serie', new_series_path, class: 'btn btn-primary' %>
<%= link_to 'Mis Series', series_index_path, class: 'btn btn-primary' %>
  <%= link_to 'New Series', new_series_path, class: 'btn btn-primary' %>
</div>
<div class="row">
  <div class="col-md-8">
    <%@series.each do |serie|%>
      <% unless serie.nil?%>
        <% unless serie.user.nil?%>
          <% if serie.user.role == 'admin' || serie.user.id == current_user.id %>
            <%= render 'series/preview', series: serie %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>



