<div class="row">
  <div class=" col-md-9 col-lg-9 ">
    <%= image_tag user.avatar.url(:thumb) %>
    <table class="table table-user-information">
      <tbody>
        <tr>
          <td><strong>Nombre de usuario:</strong></td>
          <td><%= user.username %></td>
        </tr>
        <tr>
          <td><strong>Email:</strong></td>
          <td><%= user.email%></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
