<div class="row">
  <div class=" col-md-12 col-lg-12 ">
    <table class="table table-user-information">
      <tbody>
        <tr>
          <td colspan="2" id="profile-img">
            <%= image_tag user.avatar.url(:medium) %>
          </td>
        </tr>
        <tr class="down-image">
          <td><strong>Nombre de usuario:</strong></td>
          <td><%= user.username %></td>
        </tr>
        <tr>
          <td><strong>Email:</strong></td>
          <td><%= user.email%></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
