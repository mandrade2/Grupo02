<% provide(:title, 'Búsqueda Series') %>
<% provide(:header, 'Búsqueda Series') %>

<div class="jumbotron search">
  <%= form_tag(search_path, :method => "get", id: "search-form") do %>
      <div class="row">
        <div class="col-md-3">Titulo:</div>
        <div class="col-md-3">  <%= text_field_tag :nombre, params[:nombre], class: "form-control", placeholder: "Breaking Bad ..." %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3"> País:</div>
        <div class="col-md-3"><%= text_field_tag :pais, params[:pais], class: "form-control", placeholder: "Chile ..." %></div>

      </div>
      <div class="row">
        <div class="col-md-3">Rating:</div>
        <div class="col-md-6">
          <%= number_field_tag :rating1, params[:rating1], class: 'input-mini', placeholder: "1", in: 1..5 %>
          <%= number_field_tag :rating2, params[:rating2], placeholder: "5", in: 1..5, class: 'input-small' %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3"> Capitulo:</div>
        <div class="col-md-3"><%= text_field_tag :capitulo, params[:capitulo], class: "form-control", placeholder: "Pilot ..." %></div>
      </div>

      <div class="row">
        <div class="col-md-3"> Director:</div>
        <div class="col-md-3"><%= text_field_tag :director, params[:director], class: "form-control", placeholder: "stiven spilberg ..." %></div>
      </div>

      <div class="row">
        <div class="col-md-3"> Actor:</div>
        <div class="col-md-3"><%= text_field_tag :actor, params[:actor], class: "form-control", placeholder: "Luis jara ..." %></div>
      </div>

      <div class="row">
        <div class="col-md-3"> Genero:</div>
        <div class="col-md-3"><%= text_field_tag :genero, params[:genero], class: "form-control", placeholder: "Accion ..." %></div>
      </div>

      <div class="row">
        <div class="col-md-3"> Ordenar por rating:</div>
        <div class="col-md-3">
          <%= select_tag :rating_order, options_for_select([['Mayor a menor', 1], ['Menor a mayor', 2]]), class: "form-control", include_blank: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3"> Ordenar por fecha de estreno:</div>
        <div class="col-md-3">
          <%= select_tag :release_date_order, options_for_select([['Mas reciente a mas antigua', 1], ['Mas antigua a mas reciente', 2]]), class: "form-control", include_blank: true %>
        </div>
      </div>

      <br>

      <div class="row">
        <div class="col-md-3"><%= submit_tag "Search", class: 'btn btn-primary pull-left' %></div>
      </div>

  <% end %>
</div>


<% if @series %>
    <h3> <%= @series.count %> resultados</h3>
    <div class="row">
      <div class="col-md-12">
        <% @series.each do |series| %>
            <div class="series-display">
              <div class="img-preview img-rounded">
                <a href='<%= "series/#{series.id}" %>'>
                  <%= image_tag series.image.url(:medium) %>
                  <div class="content">
                    <%= series.name %>
                  </div>
                </a>
              </div>
            </div>
        <% end %>
      </div>
    </div>
<% else %>
    <h3>0 resultados</h3>
    <p>No hay series que contengan tales palabras.</p>
<% end %>
